{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "my-music",
    "version": "0.3.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "open": true,
        "save": true,
        "message": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true
      }
    },
    "windows": [
      {
        "title": "my-music",
        "width": 800,
        "height": 500,
        "minWidth": 300,  
        "minHeight": 700
      }
    ],
    "security": {
       "csp": "default-src 'self'; media-src 'self' asset: tauri://* file://* https://asset.localhost/*"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.my-music.app",
      "icon": [
        "icons/icon.ico"
      ],
      "resources": [
        "bin/avdevice-61.dll",
        "bin/avfilter-10.dll",
        "bin/avcodec-61.dll",
        "bin/avformat-61.dll",
        "bin/avutil-59.dll",
        "bin/swresample-5.dll",
        "bin/swscale-8.dll"
      ]
    }
  }
}
