{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "my-music",
    "version": "0.4.3"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "maximize": true,
        "unmaximize": true,
        "minimize": true,
        "close": true,
        "setSize": true,
        "setPosition": true,
        "startDragging": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "open": true,
        "save": true,
        "message": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "scope": ["**"]
      }
    },
    "windows": [
      {
        "title": "my-music",
        "minWidth": 200,  
        "minHeight": 30,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
       "csp": "default-src 'self'; media-src *; img-src *; script-src 'self';"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.my-music.app",
      "icon": [
        "icons/icon.ico"
      ],
      "resources": [
        "bin/avdevice-61.dll",
        "bin/avfilter-10.dll",
        "bin/avcodec-61.dll",
        "bin/avformat-61.dll",
        "bin/avutil-59.dll",
        "bin/swresample-5.dll",
        "bin/swscale-8.dll"
      ]
    }
  }
}
